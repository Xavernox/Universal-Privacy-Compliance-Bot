# Next.js API Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/site-scanner
MONGODB_DB_NAME=site-scanner

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Scanner Service Configuration
SCANNER_SERVICE_URL=http://localhost:8000
SCANNER_SERVICE_TIMEOUT=60000

# Logging
LOG_LEVEL=info

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# CloudWatch Logging (optional)
CLOUDWATCH_LOG_GROUP=/aws/ecs/site-scanner
AWS_CLOUDWATCH_ENABLED=false

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_ALERT_CHANNEL=#alerts

# PagerDuty Integration (optional)
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-service-id
# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/upcb-mvp?retryWrites=true&w=majority
MONGODB_DB_NAME=upcb-mvp

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Basic Auth
ADMIN_BASIC_TOKEN=your-basic-auth-token-for-admin-endpoints

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Secrets Manager
SECRETS_MANAGER_SECRET_NAME=upcb-mvp-secrets

# DynamoDB (if used alongside MongoDB)
DYNAMODB_TABLE_PREFIX=upcb-mvp

# Service URLs (for inter-service communication)
SCANNER_SERVICE_URL=http://localhost:3001
POLICY_SERVICE_URL=http://localhost:3002

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=U-PCB MVP

# CloudWatch / Logging
LOG_LEVEL=info

# MongoDB Atlas (if using Atlas)
ATLAS_CLUSTER_NAME=upcb-cluster
ATLAS_PROJECT_ID=your-atlas-project-id

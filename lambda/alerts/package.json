{
  "name": "compliance-alert-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for sending alerts via SendGrid and Slack",
  "main": "alertService.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "aws-sdk": "^2.1400.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lambda/alerts/**/*.js",
      "!lambda/**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "aws",
    "lambda",
    "alerts",
    "sendgrid",
    "slack",
    "notifications"
  ],
  "author": "Compliance Team",
  "license": "MIT"
}
{
  "name": "compliance-monitoring-system",
  "version": "1.0.0",
  "description": "Comprehensive compliance monitoring and alerting system with AWS Lambda, EventBridge, SQS, SendGrid, and Slack integration",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:monitor": "jest tests/monitor/",
    "test:alerts": "jest tests/alerts/",
    "lint": "eslint .",
    "format": "prettier --write .",
    "deploy:cloudformation": "aws cloudformation deploy --template-file infrastructure/compliance-monitor-stack.yaml --stack-name compliance-monitor-$(date +%s) --parameter-overrides Environment=dev AdminEmail=admin@company.com",
    "deploy:terraform": "cd infrastructure && terraform init && terraform plan && terraform apply",
    "package": "cd lambda/monitor && npm install && cd ../alerts && npm install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/company/compliance-monitoring-system.git"
  },
  "dependencies": {
    "aws-sdk": "^2.1400.0",
    "axios": "^1.4.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lambda/**/*.js",
      "api/**/*.js",
      "!lambda/**/node_modules/**",
      "!api/**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "keywords": [
    "aws",
    "lambda",
    "compliance",
    "monitoring",
    "alerting",
    "sendgrid",
    "slack",
    "eventbridge",
    "sqs",
    "dynamodb"
  ],
  "author": "Compliance Team",
  "license": "MIT"
}
